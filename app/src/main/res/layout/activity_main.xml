<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/text_layout"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text=""
            android:id="@+id/edittext"
            android:textSize="40sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/text_layout">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text="7"
                android:textSize="40sp"
                android:id="@+id/seven"/>
            <Button
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text="8"
                android:textSize="40sp"
                android:id="@+id/eight"/>
            <Button
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text="9"
                android:textSize="40sp"
                android:id="@+id/nine"/>
            <Button
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text="+"
                android:textSize="40sp"
                android:id="@+id/add"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text="4"
                android:textSize="40sp"
                android:id="@+id/four"/>
            <Button
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text="5"
                android:textSize="40sp"
                android:id="@+id/five"/>
            <Button
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text="6"
                android:textSize="40sp"
                android:id="@+id/six"/>
            <Button
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text="-"
                android:textSize="40sp"
                android:id="@+id/subtract"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text="1"
                android:textSize="40sp"
                android:id="@+id/one"/>
            <Button
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text="2"
                android:textSize="40sp"
                android:id="@+id/two"/>
            <Button
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text="3"
                android:textSize="40sp"
                android:id="@+id/three"/>
            <Button
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text="/"
                android:textSize="40sp"
                android:id="@+id/divide"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text="C"
                android:textSize="40sp"
                android:id="@+id/Clear"/>
            <Button
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text="0"
                android:textSize="40sp"
                android:id="@+id/zero"/>
            <Button
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text="."
                android:textSize="40sp"
                android:id="@+id/dot"/>
            <Button
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text="*"
                android:textSize="40sp"
                android:id="@+id/multiply"/>
        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="="
            android:textSize="40sp"
            android:id="@+id/equals"
            />



    </LinearLayout>


</RelativeLayout>